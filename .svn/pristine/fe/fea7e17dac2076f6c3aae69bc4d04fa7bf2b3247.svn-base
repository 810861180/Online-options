.site-content--tabs {
  /deep/ {
    .el-tabs--card>.el-tabs__header {
      .el-tabs__nav {
        border: none;
      }

      .el-tabs__item {
        &:first-child {
          // border-left: 1px solid $stableec!important;
        }
        &.is-active {
          border:1px solid $--color-primary;
          background-color: $--color-primary;
          color: $light;
          &.is-closable{
            padding-left: 10px;
            padding-right: 10px;
          }
        }
      }
    }

    .el-tabs__nav {
      .el-tabs__item {
        margin: 7px 5px 7px 3px;
        border-radius: 3px;
        font-size: 12px;
        height: 28px;
        line-height: 28px;
        border: 1px solid $stableec;
        background-color: $light;
        // padding: 0 5px 0 5px!important;
        // vertical-align: middle;
        // color: #666;
        // transition: all .3s ease-in;
      }
    }
  }
}

