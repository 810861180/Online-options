    },
    beforeRemove (file, fileList) {
      return this.$confirm(`确定移除 ${file.name}？`);
    },
    // shangchuan
    beforeUpload(file) {
      console.log(file)
      this.params.uuid = file.uid
      if (file.size > 1024 * 1024) {
        alert('文件过大')
        return false
      }
    }

  }
}
</script>

