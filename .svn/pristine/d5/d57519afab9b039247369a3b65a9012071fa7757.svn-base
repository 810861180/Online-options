<template>
  <div>
    <el-upload 
    class="upload-demo" 
    :action="this.$axios.adornUrl() + 'fileUpload/uplodImgs'"
    :headers='headers'
    :data="params"
    :on-preview="handlePreview" 
    :on-remove="handleRemove" 
    :on-success="handleSuccess"
